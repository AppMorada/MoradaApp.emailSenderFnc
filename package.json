{
  "name": "MoradaApp.emailFnc",
  "main": "dist/functions/index.js",
  "scripts": {
    "test": "dotenv -e .env.test jest",
    "firestore": "firebase emulators:start --only firestore",
    "dev": "sh -c \"./tools/parallel.sh\"",
    "build": "tsc -p . --noEmit && swc ./functions --config-file ./.swcrc.json -d ./dist",
    "lint": "eslint \"{functions,tests}/**/*.ts\"",
    "functions:emailSenderFnc": "sh -c \"./tools/functions.sh EmailSenderFnc 8411\"",
    "lint:fix": "eslint --fix",
    "lint:fix:global": "eslint --fix \"{functions,tests}/**/*.ts\"",
    "format": "prettier --write",
    "set-hooks": "husky",
    "pre-commit": "lint-staged --allow-empty",
    "commit": "git-cz"
  },
  "author": "",
  "license": "ISC",
  "watch": {
    "functions:emailSenderFnc": {
      "quiet": true,
      "patterns": [
        "dist"
      ],
      "delay": 1500,
      "extensions": "js"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "functions/**/*.(t|j)s": [
      "pnpm format",
      "pnpm lint:fix"
    ]
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.3.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.1",
    "dotenv-cli": "^7.3.0",
    "firebase-admin": "^12.0.0",
    "inversify": "^6.0.2",
    "reflect-metadata": "^0.2.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.0.3",
    "@swc/cli": "^0.3.9",
    "@swc/core": "^1.4.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "commitizen": "^4.3.0",
    "commitlint": "^18.6.0",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "firebase-tools": "^13.1.0",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "npm-watch": "^0.11.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
